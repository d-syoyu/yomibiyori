# .env.example - 詠日和（よみびより）環境変数テンプレート
# 実際の値は開発者ごとに設定し、.envに保存すること（Git管理対象外）

# === Database ===
DATABASE_URL=postgresql://user:password@localhost:5432/yomibiyori

# === Cache / Queue ===
REDIS_URL=rediss://<upstash-url>
REDIS_RANKING_PREFIX=rankings:

# === Auth ===
SUPABASE_URL=https://<your-project>.supabase.co
SUPABASE_ANON_KEY=<anon-key>
SUPABASE_SERVICE_ROLE_KEY=<service-role-key>
SUPABASE_JWT_SECRET=<jwt-secret>
SUPABASE_PROJECT_REF=<project-ref>
SUPABASE_JWT_AUDIENCE=authenticated
SUPABASE_JWKS_URL=https://<project-ref>.supabase.co/auth/v1/keys
SUPABASE_REQUEST_TIMEOUT=5.0
SUPABASE_JWKS_CACHE_TTL=3600

# === Storage ===
R2_ACCOUNT_ID=<cloudflare-account-id>
R2_ACCESS_KEY_ID=<r2-access-key>
R2_SECRET_ACCESS_KEY=<r2-secret>

# === Push Notifications ===
EXPO_ACCESS_TOKEN=<expo-token>

# === Observability ===
SENTRY_DSN=<sentry-dsn>
POSTHOG_API_KEY=<posthog-key>

# === Theme Generation ===
THEME_CATEGORIES=general,nature,emotion
THEME_GENERATION_MAX_RETRIES=3
THEME_GENERATION_RETRY_DELAY_SECONDS=0.5
THEME_AI_PROVIDER=openai
OPENAI_API_KEY=<openai-api-key>
OPENAI_MODEL=gpt-4o-mini
OPENAI_TIMEOUT=15.0

# === Environment ===
APP_ENV=development
DEBUG=true
